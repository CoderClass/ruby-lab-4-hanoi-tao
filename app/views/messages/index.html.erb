<h1>Welcome to room <%= @room.name %></h1>
<br/>
<br/>

<div class="messages">
  <% @messages.each do |message| %>
    <div class='message'><strong><%= message.username %></strong>: <%= message.content %></div>
  <% end %>
</div>

<br/>
<br/>
<%= form_for [@room, @message=Message.new] do |f| %>
  <div class="form-group">
    <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
    <%= f.text_field :content, placeholder: "Content", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Send", class: "btn btn-info" %>
  </div>
<% end %>

<script>
  setInterval(updateMessagesViaJSON,3000)
</script> 